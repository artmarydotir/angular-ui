    //- news
    li.dropdown-header
      i.fa.fa-newspaper-o(aria-hidden="true")
      | &nbsp; {{ i18n.news }}
    li
      a(href="#!/admin/allnews/list", ng-click="menu.current = ''") {{ i18n.newsList }}
    li
      a(href="#!/admin/newsaproved/list", ng-click="menu.current = ''") {{ i18n.approveList }}
