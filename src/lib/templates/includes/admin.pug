li.dropdown(ng-class="menu.current === 'admin' ? 'open' : ''" , ng-show="user.role === 'ROLE_ADMIN'")
  a.dropdown-toggle(href="javascript:void(0);", ng-click="menu.change('admin')")
    i.fa.fa-lock(aria-hidden="true")
    | &nbsp; {{ i18n.admin }} &nbsp;
    span.caret
    |
  ul.dropdown-menu
    li.dropdown-header
      i.fa.fa-user(aria-hidden="true")
      | &nbsp; {{ i18n.user }}
    li
      a(href="#!/admin/user/add", ng-click="menu.current = ''") {{ i18n.addUser }}
    li
      a(href="#!/admin/user/list", ng-click="menu.current = ''") {{ i18n.userList }}
    li.divider(role="separator")
    //- category
    li.dropdown-header
      i.fa.fa-cube(aria-hidden="true")
      | &nbsp; {{ i18n.category }}
    li
      a(href="#!/admin/category/add", ng-click="menu.current = ''") {{ i18n.addCategory }}
    li
      a(href="#!/admin/category/list", ng-click="menu.current = ''") {{ i18n.categoryList }}
    li.divider(role="separator")
    //- reportage
    li.dropdown-header
      i.fa.fa-sign-language(aria-hidden="true")
      | &nbsp; {{ i18n.reportage }}
